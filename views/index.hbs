<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<div class="container">
  <div class="row justify-content-end me-5">
    <div class="col-2 mt-5">
      <form method="post" id="sortSelect" action="/">
        <select class="form-select">
          <option value="atoz" selected>A-Z</option>
          <option value="ztoa">Z-A</option>
          <option value="category">類別</option>
          <option value="region">地區</option>
        </select>
      </form>

    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-sm-3">
        {{#each restaurants}}
        <div class="text-secondary">
          <div class="card mb-3">
            <a href="/restaurants/{{this._id}}">
              <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}" />
            </a>
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i>
                {{this.category}}
              </div>

              <div class="d-flex justify-content-between align-items-center mt-3">
                <span class="badge rounded-pill bg-danger">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>
                <span>
                  <a href="/restaurants/{{this._id}}/edit" class="btn btn-light">
                    Edit</a>
                  <form action="/restaurants/{{this._id}}?_method=DELETE" method="POST" style="display: inline;">
                    <button type="submit" class="btn btn-light">delete</button>
                  </form>
                </span>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>